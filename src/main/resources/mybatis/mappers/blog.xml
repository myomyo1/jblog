<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- sqlSession 이 찾아올 수 있는 첫번째 주소 이름 -->
<mapper namespace="blog">
	
	<insert id="createblog" parameterType="int">
	<![CDATA[
		insert into blog 
		values (#{userNo}, 'test타이틀입니다test', 'test사진입니다test')		
	]]>
	</insert>
		
	<select id="getBlogInfo" parameterType="String" resultType="BlogVo">
	<![CDATA[
		select u.id, b.userno, b.blogtitle, b.logofile
		from blog b, users u
		where u.userno=b.userno and u.id=#{id}
		]]>  
	</select>
	
</mapper>