<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- sqlSession 이 찾아올 수 있는 첫번째 주소 이름 -->
<mapper namespace="blog">
	
	<insert id="createblog" parameterType="UserVo">
	<![CDATA[
		insert into blog 
		values (#{userNo}, #{userName}||'님의 블로그입니다.', 'test사진입니다test')		
	]]>
	</insert>
		
	<select id="getBlogInfo" parameterType="String" resultType="BlogVo">
	<![CDATA[
		select u.id,u.username, b.userno, b.blogtitle, b.logofile
		from blog b, users u
		where u.userno=b.userno and u.id=#{id}
		]]>  
	</select>
	
	<update id="updateByTitle" parameterType = "map" >
	<![CDATA[
		update blog set
		blogTitle= #{blogTitle}
		where id=#{id}
	]]>
	</update>
	
	<update id="updateByFile" parameterType = "FileVo" >
	<![CDATA[
		update blog set
		saveName= #{saveName}
		where id=#{id}
	]]>
	</update>
</mapper>